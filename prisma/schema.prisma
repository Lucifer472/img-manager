// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}


model User {
  id            String    @id @default(cuid())
  name          String
  password      String
  email         String   @unique
  emailVerified DateTime?
  image         String?
}

model verifyEmail {
  id            String    @id @default(cuid())
  email         String    
  token         String    @unique
  expires       DateTime

  @@unique([email,token])
}

model img {
  id      Int   @id @default(autoincrement())
  name    String @unique
  folder  String
}